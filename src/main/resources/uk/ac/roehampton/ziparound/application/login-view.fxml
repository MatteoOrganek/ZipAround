<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.bootstrapfx.scene.layout.Panel?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="uk.ac.roehampton.ziparound.application.LoginController">

    <!-- Center content -->
    <center>
        <HBox spacing="10" alignment="CENTER">
            <VBox spacing="10" alignment="CENTER">
                <TextField promptText="Enter text"/>
                <PasswordField promptText="Enter password"/>
                <Button fx:id="loginButton" text="Login" onAction="#login"/>
            </VBox>
        </HBox>
    </center>

</BorderPane>
