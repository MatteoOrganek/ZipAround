<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="uk.ac.roehampton.ziparound.application.controllers.components.BookingCardController" maxHeight="150" maxWidth="600"
            styleClass="booking-card">

    <VBox spacing="14"
          AnchorPane.topAnchor="0"
          AnchorPane.bottomAnchor="0"
          AnchorPane.leftAnchor="0"
          AnchorPane.rightAnchor="0"
          alignment="CENTER">

        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label text="Booking #" style="-fx-font-weight: bold;"/>
            <Label fx:id="bookingIdText"
                   style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

            <Region HBox.hgrow="ALWAYS"/>

            <Label fx:id="statusText"
                   style="-fx-padding: 4 10;
                          -fx-background-radius: 6;
                          -fx-font-weight: bold;"/>
        </HBox>

        <Separator/>

        <GridPane hgap="10" vgap="8">
            <columnConstraints>
                <ColumnConstraints minWidth="130"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>

            <!-- Bookable -->
            <Label text="Booked Item:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>

            <Label text="Item" fx:id="bookableText" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <!-- Start -->
            <Label text="Start Time:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <HBox spacing="6" GridPane.rowIndex="1" GridPane.columnIndex="1">
                <DatePicker fx:id="startDatePicker"/>
                <TextField fx:id="startTimeField" promptText="HH:mm"/>
            </HBox>

            <!-- End -->
            <Label text="End Time:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <HBox spacing="6" GridPane.rowIndex="2" GridPane.columnIndex="1">
                <DatePicker fx:id="endDatePicker"/>
                <TextField fx:id="endTimeField" promptText="HH:mm"/>
            </HBox>

            <!-- Created -->
            <Label text="Created On:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <Label fx:id="createdOnLabel"
                   GridPane.rowIndex="3"
                   GridPane.columnIndex="1"/>
        </GridPane>

        <Separator/>

        <HBox fx:id="staffInfoBox" spacing="8" alignment="CENTER_LEFT">
            <Label text="Approved by:"/>
            <Label fx:id="staffLabel"/>
        </HBox>

        <HBox alignment="CENTER_RIGHT" spacing="10">
            <Label fx:id="hintLabel"
                   style="-fx-text-fill: #8a2e2e;"/>

            <Region HBox.hgrow="ALWAYS"/>

            <Button text="Save Changes"
                    fx:id="saveButton"
                    styleClass="main"/>

            <Button text="Approve/Refuse"
                    fx:id="approveButton"
                    styleClass="main"/>

            <Button text="Delete"
                    fx:id="deleteButton"
                    styleClass="main, red"/>

            <Button text="Cancel"
                    fx:id="cancelButton"
                    styleClass="main, red"/>
        </HBox>

    </VBox>
</AnchorPane>
