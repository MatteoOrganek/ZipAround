<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="uk.ac.roehampton.ziparound.application.controllers.AccountController">

    <top>
        <fx:include fx:id="header" source="modules/header.fxml"/>
    </top>

    <!-- Center content -->
    <center>
        <VBox spacing="30"
              alignment="CENTER"
              style="-fx-padding: 40px;">
            <VBox spacing="10"
                  alignment="CENTER"
                  prefWidth="300"
                  style="-fx-background-color: white;
                                 -fx-padding: 40px;
                                 -fx-background-radius: 12;
                                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 15, 0, 0, 5);">
                <Label>Account section</Label>
            </VBox>

        </VBox>
    </center>

</BorderPane>
