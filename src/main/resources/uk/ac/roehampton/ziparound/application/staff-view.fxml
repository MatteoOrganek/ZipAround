<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="uk.ac.roehampton.ziparound.application.controllers.StaffController" style="-fx-background-color: #F0F2F5;">

        <top>
            <fx:include fx:id="header" source="modules/header.fxml"/>
        </top>

        <center>
            <HBox spacing="30" style="-fx-padding: 20px;">

                <!-- Booking Section -->
                <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 20px; -fx-background-radius: 12;" HBox.hgrow="ALWAYS">
                    <Label text="Booking Requests"
                           style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

                    <TableView fx:id="bookingRequestsTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="bookingIDColumn" text="ID" prefWidth="50"/>
                            <TableColumn fx:id="customerNameColumn" text="Customer" prefWidth="150"/>
                            <TableColumn fx:id="bookableColumn" text="Bookable" prefWidth="120"/>
                            <TableColumn fx:id="startTimeColumn" text="Pickup Date" prefWidth="120"/>
                            <TableColumn fx:id="endTimeColumn" text="Return Date" prefWidth="120"/>
                            <TableColumn fx:id="approvedColumn" text="Approved" prefWidth="100"/>
                        </columns>
                    </TableView>

                    <HBox spacing="10">
                        <Button onAction="#approveSelected" text="Approve Selected" styleClass="main"/>
                        <Button onAction="#rejectSelected" text="Reject Selected" styleClass="main, red"/>
                        <Button onAction="#deleteSelected" text="Delete Selected" styleClass="main, red"/>
                    </HBox>
                </VBox>

                <!-- Maintenance Section -->
                <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 20px; -fx-background-radius: 12;" HBox.hgrow="ALWAYS">
                    <Label text="Vehicle / Equipment Maintenance"
                           style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

                    <TableView VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn text="ID" prefWidth="50"/>
                            <TableColumn text="Equipment" prefWidth="150"/>
                            <TableColumn text="Status" prefWidth="100"/>
                            <TableColumn text="Last Serviced" prefWidth="150"/>
                            <TableColumn text="Action" prefWidth="100"/>
                        </columns>
                    </TableView>

                    <Button text="Mark Selected as Maintained" styleClass="main"/>
                </VBox>

            </HBox>
        </center>
        <bottom>
            <HBox alignment="CENTER" style="-fx-padding: 5px; -fx-background-color: #16381b;">
                <Label text="Â© 2025 Owres, ZipAround (NOT ZipAbout) Staff Portal" style="-fx-text-fill: white; -fx-font-size: 10px;"/>
            </HBox>
        </bottom>
    </BorderPane>
