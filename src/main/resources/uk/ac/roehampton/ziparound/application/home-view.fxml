<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<?import com.calendarfx.view.CalendarView?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="uk.ac.roehampton.ziparound.application.controllers.HomeController"
            style="-fx-background-color: linear-gradient(to bottom right, #6B9080, #A3B18A);">

    <top>
        <fx:include fx:id="header" source="modules/header.fxml"/>
    </top>

    <center>
        <VBox spacing="30"
              alignment="TOP_CENTER"
              style="-fx-padding: 40px;">

            <HBox spacing="20">
                <VBox spacing="10"
                      alignment="CENTER"
                      prefWidth="400"
                      style="-fx-background-color: white;
                             -fx-padding: 40px;
                             -fx-background-radius: 12;
                             -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 15, 0, 0, 5);">

                    <Label fx:id="greetText"
                           style="-fx-font-size: 28px;
                                  -fx-text-fill: #446356;
                                  -fx-font-weight: bold;"
                           textAlignment="CENTER"/>

                    <Label text="Scooters - EBikes - Equipment"
                           style="-fx-font-size: 16px;
                                  -fx-text-fill: #666666;"/>

                    <Button text="Start a New Booking"
                            styleClass="main"
                            onAction="#goToBookingCreationView"/>

                </VBox>

                <HBox style="-fx-background-color: white;
                                 -fx-padding: 40px;
                                 -fx-background-radius: 12;
                                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 15, 0, 0, 5);">

                    <CalendarView fx:id="calendarView"
                                  prefHeight="1000"
                                  prefWidth="1000"/>
                </HBox>
            </HBox>

        </VBox>
    </center>

</BorderPane>
